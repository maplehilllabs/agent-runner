# AWS Bedrock Configuration
bedrock:
  enabled: false
  region: us-east-1
  # profile: default
  # model_id: global.anthropic.claude-sonnet-4-5-20250929-v1:0
  # small_model_id: us.anthropic.claude-haiku-4-5-20251001-v1:0

# Sandbox Configuration
sandbox:
  enabled: false
  auto_allow_bash: false
  excluded_commands: []

# Slack Notifications
slack:
  enabled: false
  # webhook_url: https://hooks.slack.com/services/...
  username: Claude Agent
  icon_emoji: ":robot_face:"
  notify_on_success: true
  notify_on_error: true
  include_cost: true
  include_duration: true

# Logging Configuration
logging:
  enabled: true
  log_dir: ./logs
  log_level: INFO
  log_agent_trace: true
  log_tool_calls: true
  log_token_usage: true
  separate_trace_file: true
  rotate_logs: true
  max_log_size_mb: 10
  backup_count: 5

# Task Configuration
# task_prompt: |
#   Your default task prompt here...
# task_prompt_file: ./prompts/default_task.md

# Service Mode
service_mode: false
service_interval_seconds: 3600
# cron_schedule: "0 * * * *"  # Every hour

# Session Management
# session_id: null
# continue_conversation: false
