# Claude Agent Framework Configuration
# =====================================
# Copy this file to config.yaml and customize

# Agent Configuration
agent:
  name: my-agent
  model: sonnet  # sonnet, opus, haiku
  max_turns: 50
  permission_mode: acceptEdits  # default, acceptEdits, bypassPermissions, plan

  # System prompt configuration
  system_prompt_type: append  # preset, custom, append
  system_prompt_preset: claude_code
  system_prompt_content: |
    You are a specialized automation agent.
    Focus on accuracy and efficiency.
    Always explain your actions clearly.

  # Budget and limits
  max_budget_usd: 10.0
  # max_thinking_tokens: 5000

  # Working directory (defaults to current directory)
  # cwd: /path/to/project

  # Settings sources to load
  setting_sources:
    - user
    - project

# Sub-Agents
sub_agents:
  - name: code-reviewer
    description: Expert code reviewer for security, quality, and best practices
    prompt: |
      You are an expert code reviewer with focus on:
      - Security vulnerabilities
      - Code quality and maintainability
      - Performance optimization
      - Best practices

      Provide specific, actionable feedback.
    tools:
      - Read
      - Grep
      - Glob
    model: sonnet

  - name: data-analyst
    description: Data analysis specialist for database queries and reporting
    prompt: |
      You are a data analysis expert specializing in:
      - SQL queries and optimization
      - Data quality assessment
      - Statistical analysis
      - Report generation

      Be precise with numbers and validate findings.
    tools:
      - Bash
      - Read
      - Write
      - Grep
    model: sonnet

  - name: log-analyzer
    description: Log analysis expert for error detection and pattern identification
    prompt: |
      You are a log analysis specialist focused on:
      - Error pattern identification
      - Performance bottleneck detection
      - Security incident investigation
      - Root cause analysis

      Prioritize findings by impact.
    tools:
      - Read
      - Grep
      - Glob
      - Bash

